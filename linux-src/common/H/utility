#if !defined(UTILITY_H)
#define UTILITY_H

#define max(a,b) \
    ({ __typeof__ (a) _a = (a); \
        __typeof__ (b) _b = (b); \
        _a > _b ? _a : _b; })

#define min(a,b) \
    ({ __typeof__ (a) _a = (a); \
        __typeof__ (b) _b = (b); \
        _a < _b ? _a : _b; })

#define FAILED(x) (x != 0)
#define SUCCEEDED(x) (x == 0)

#endif
